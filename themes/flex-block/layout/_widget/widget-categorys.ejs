<section class="widget-categorys widget-item layout-margin content-padding--primary soft-size--large soft-style--box">
  <div class="widget-title">
    <%- partial("../_svg/icon-categories.svg") %>
    <span>CATEGORYS</span>
  </div>
  <div class="widget-body">
    <ul class="categorys-list">
      <% site.categories.each(function (categorie) { %>
        <%
          function search(nameKey, targetObj){
            for (var i in targetObj) {
              if (targetObj[i] === nameKey) {
                return i;
              }
            }
          }

          var name = search(categorie.name, config.category_map);
        %>
        <li class="categorys-list-item">
          <a href="<%= url_for(categorie.path) %>">
            <%= name %> (<%= categorie.length %>)
          </a>
        </li>
      <% }) %>
    </ul>
  </div>
</section>